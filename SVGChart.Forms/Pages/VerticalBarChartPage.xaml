<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    x:Class="SVGChart.Pages.VerticalBarChartPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:svgChart="clr-namespace:SVGChart.Nuget.Views;assembly=SVGChart.Nuget"
    xmlns:vm="clr-namespace:SVGChart.ViewModels"
    x:DataType="vm:VerticalBarChartViewModel">
    <ContentPage.BindingContext>
        <vm:VerticalBarChartViewModel />
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <StackLayout
            HorizontalOptions="FillAndExpand"
            Spacing="30"
            VerticalOptions="FillAndExpand">
            <Button
                BackgroundColor="#ff4d4d"
                Command="{Binding UpdateValuesCommand}"
                HeightRequest="40"
                HorizontalOptions="CenterAndExpand"
                Text=" Update Values "
                TextColor="White" />
            <svgChart:VerticalBarChartView
                BarWidth="Medium"
                DisplayValue="{Binding IsValuesVisible}"
                HeightRequest="400"
                ItemSource="{Binding ChartSegments}"
                WidthRequest="400" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
